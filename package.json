{
  "name": "drupal-admin-ui-workspace",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "yarn": ">= 1.6",
    "node": ">= 8.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsdrupal/drupal-admin-ui.git"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "9.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react-app": "^3.1.2",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.11.1",
    "jest-junit": "^3.6.0",
    "prettier": "^1.11.1"
  },
  "scripts": {
    "build": "yarn workspace drupal-ui build && yarn workspace drupal-admin-ui build",
    "eslint": "eslint . --max-warnings=0 --fix",
    "prettier": "prettier --write 'packages/**/*.js'",
    "test": "yarn test:lint && yarn test:unit && yarn test:functional",
    "test:lint": "eslint . --max-warnings=0 --format junit -o reports/eslint-junit.xml",
    "test:unit": "yarn workspace drupal-admin-ui test:unit"
  },
  "workspaces": [
    "packages/drupal-admin-ui",
    "packages/drupal-ui"
  ]
}
